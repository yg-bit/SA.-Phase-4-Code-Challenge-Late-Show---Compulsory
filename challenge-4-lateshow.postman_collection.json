				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"rating\": 5,\n\t\"episode_id\": 1,\n\t\"guest_id\": 1\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/appearances",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"appearances"
					]
				},
				"description": "Create a new appearance with valid data"
			},
			"response": []
		},
